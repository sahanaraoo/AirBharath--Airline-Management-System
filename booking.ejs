<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Details</title>
    <!-- Include necessary CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Your custom styles -->
    <link rel="stylesheet" href="./style.css">
</head>

<body>
    <h1>Flight Details</h1>
    <div>
        <h2>Flight ID: <%= flightDetails.flight_id %></h2>

        <!-- Form to enter passenger details -->
        <form action="/confirm-booking/<%= flightDetails.flight_id %>" method="POST" id="passengerForm">

            <div id="passengerFields">
                <h3>Passenger 1</h3>
                <input type="text" name="passengerName1" placeholder="Passenger Name" required><br>
                <input type="text" name="age1" placeholder="Age" required><br>
                <input type="email" name="email1" placeholder="Email" required><br>
                <input type="text" name="contact1" placeholder="Contact" required><br>
                <input type="text" name="address1" placeholder="Address" required><br>
                <hr>
            </div>
            <button type="button" onclick="addPassengerFields()">Add More Passengers</button><br>
            <button type="submit">Confirm Booking</button>

        </form>
    </div>

    <script>
        let passengerCount = 1;

        function addPassengerFields() {
            passengerCount++;
            const passengerFields = document.getElementById('passengerFields');
            const newPassengerFields = document.createElement('div');

            newPassengerFields.innerHTML = `
                <h3>Passenger ${passengerCount}</h3>
                <input type="text" name="passengerName${passengerCount}" placeholder="Passenger Name" required><br>
                <input type="text" name="age${passengerCount}" placeholder="Age" required><br>
                <input type="email" name="email${passengerCount}" placeholder="Email" required><br>
                <input type="text" name="contact${passengerCount}" placeholder="Contact" required><br>
                <input type="text" name="address${passengerCount}" placeholder="Address" required><br>
                <hr>
            `;
            passengerFields.appendChild(newPassengerFields);
        }
    </script>

</body>

</html>








